 @model List<NS.EMS.Model.EmployeeDtModel>
   @{
    Layout = null;
   }

<!DOCTYPE html>
<html>
   <head>
      <meta name = "viewport" content = "width = device-width" />
      <title>Edit Page</title>
   </head>
	
   <body>
      @using (Html.BeginForm()){
         @Html.AntiForgeryToken()
         <div class = "form-horizontal">
            <h2><b>Employee</b></h2>
            <hr />
            
                <h1>
                    <b>
                        Edit
                    </b>
                </h1>
                <br/>
            	
            @Html.HiddenFor(model => model.First().EID)
				
             <div class = "form-group">
                 <b>
               @Html.LabelFor(
                  model => model.First().EID, htmlAttributes: new{
                     @class = "control-label col-md-2" })
				</b>
               <div class="editor-field">
                   @Html.TextBoxFor(model=>model.First().EID, new{})
               </div>
					
            </div>

            <br>
            <div class = "form-group">
                <b>
                    @Html.LabelFor(
                  model => model.First().EmployeeName, htmlAttributes: new{
                     @class = "control-label col-md-2" })
					</b>
		
               <div class = "col-md-10">
                  @Html.EditorFor(model => model.First().EmployeeName, new{
                     htmlAttributes = new {
                        @class = "form-control" } })
								
                 
               </div>
					
            </div>
				<br>
            <div class = "form-group">
                <b>
               @Html.LabelFor(
                  model => model.First().Email, htmlAttributes: new{
                     @class = "control-label col-md-2" })
					</b>		
               <div class = "col-md-10">
                  @Html.EditorFor(
                     model => model.First().Email, new{
                        htmlAttributes = new{ @class = "form-control" } })
				
               </div>
					
            </div>
				<br>




                 <div class = "form-group">
                <b>               
                    @Html.LabelFor(
                  model => model.First().Gender, htmlAttributes: new{
                     @class = "control-label col-md-2" })
				</b>

               <div>
                   <b>
                  Male: @Html.RadioButtonFor(model=>model.First().Gender,"Male") 
                  <br />
                  Female: @Html.RadioButtonFor(model=>model.First().Gender,"Female")
                  </b>
                   
               </div>
					
            </div>





            <br>

                <div class = "form-group">
                    <b>
               @Html.LabelFor(
                  model => model.First().Mobile, htmlAttributes: new{
                     @class = "control-label col-md-2" })
					</b>		
               <div class = "col-md-10">
                  @Html.EditorFor(
                     model => model.First().Mobile, new{
                        htmlAttributes = new{ @class = "form-control" } })
				
               </div>
					
            </div>
            <br>
                <div class = "form-group">
                    <b>
               @Html.LabelFor(
                  model => model.First().DeptId, htmlAttributes: new{
                     @class = "control-label col-md-2" })
					</b>		
              
			  <div class="editor-field">
                   @Html.TextBoxFor(model=>model.First().DeptId, new{})
               </div>
            </div>


            <br>
                <div class = "form-group">
                    <b>
               @Html.LabelFor(
                  model => model.First().DeptName, htmlAttributes: new{
                     @class = "control-label col-md-2" })
				</b>			
               
                <div class="editor-field">
                   @Html.TextBoxFor(model=>model.First().DeptName, new{})
               </div>
					
            </div>

				<br>
                <br>

            <div class = "form-group">
               <div class = "col-md-offset-2 col-md-10">
                  <input type = "submit" value = "Save" class = "btn btn-default"/>
               </div>
            </div>
				
         </div>
      }
		<br>
      <div>
         @Html.ActionLink("Previous", "ViewRecord")
      </div>
   
   </body>
</html>
 <script src="~/js/validation.js"></script>
